<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#030821"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_weight="0.56"
        android:layout_gravity="center"
        android:src="@drawable/ic_nstu" />

    <Button
        android:id="@+id/button_link"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.15"
        android:autoLink="web"
        android:background="#334380"
        android:clickable="true"
        android:cursorVisible="true"
        android:linksClickable="true"
        android:onClick="goToSo"
        android:padding="3dp"
        android:text="Post Something"
        android:textColor="#FFFFFF"
        android:textSize="19sp" >

    </Button>

    <Button
        android:id="@+id/button_su"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:layout_weight="0.30"
        android:autoLink="web"
        android:background="#334380"
        android:clickable="true"
        android:onClick="goToSu"
        android:text="Recent Posts"
        android:textColor="#FFFFFF"
        android:textSize="19sp" >

    </Button>

    <Button
        android:id="@+id/button_off"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:layout_weight="0.06"
        android:autoLink="web"
        android:background="#334380"
        android:clickable="true"
        android:onClick="goToSM"
        android:text="Send Message"
        android:textColor="#FFFFFF"
        android:textSize="19sp" >

    </Button>

    <Button
        android:id="@+id/button_vw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:layout_weight="0.25"
        android:autoLink="web"
        android:background="#334380"
        android:clickable="true"
        android:onClick="goToWv"
        android:text="Visit our website"
        android:textColor="#FFFFFF"
        android:textSize="19sp" >

    </Button>

    <Button
        android:id="@+id/button_fb"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:layout_weight="0.30"
        android:autoLink="web"
        android:background="#334380"
        android:clickable="true"
        android:onClick="display"
        android:text="Contacts Info"
        android:textColor="#FFFFFF"
        android:textSize="19sp" >

    </Button>

    <Button
        android:id="@+id/button_pg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:autoLink="web"
        android:background="#334380"
        android:clickable="true"
        android:onClick="goToPG"
        android:text="ICEPC Programming group"
        android:textColor="#FFFFFF"
        android:textSize="19sp" >
    </Button>

     <Button
        android:id="@+id/button_tt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:autoLink="web"
        android:background="#334380"
        android:clickable="true"
        android:onClick="GotoEmail"
        android:text="Send SMS/Email"
        android:textColor="#FFFFFF"
        android:textSize="19sp" >
    </Button>
</LinearLayout>